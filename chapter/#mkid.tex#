 \centering
 \includegraphics[width=15cm]{figures/ddc.pdf}
 \caption{}
 \label{fig:ddc}
\end{figure}

\section{’´û’Â¸’¤Î’ÆÉ’¤ß’½Ð’¤·’·Ï}

% \begin{wrapfigure}{r}{70mm}
%  \centering
%  \includegraphics[width=12cm, angle=270]{figures/readout_system_1.pdf}
%  \caption{’´û’Â¸’¤Î’ÆÉ’¤ß’½Ð’¤·’·Ï}
